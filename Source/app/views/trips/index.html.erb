<p id="notice"><%= notice %></p>

<h1>Listing Trips</h1>

<table class="tripTable">
  <thead>
    <tr>
      <th>Title</th>
      <th>Public</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Transport</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.title %></td>
        <td><%= trip.public ? "yes" : "no" %></td>
        <td><%= trip.start_date.strftime("%d.%m.%y %H:%M") %></td>
        <td><%= trip.end_date.strftime("%d.%m.%y %H:%M") %></td>
        <td><%= trip.transport.name %></td>
        <td><%= link_to 'Show', trip %> <%= link_to 'Edit', edit_trip_path(trip) %> <%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

